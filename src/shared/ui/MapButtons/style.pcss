.mapButtons {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    &__button {
        border: none;
        background-color: var(--colorWhite);
        border-radius: 1rem;
        display: flex;
        gap: 1rem;
        padding: 1.5rem 2rem;
        font-size: 2rem;
        align-items: center;
        transition: var(--transition);
        cursor: pointer;

        &:hover {
            background-color: var(--colorGrayLight);
        }
    }
}